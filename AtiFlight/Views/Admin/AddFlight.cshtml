@model AtiFlight.Models.Flight

@{
    ViewData["Title"] = "AddFlight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex flex-column align-items-center justify-content-center ">
    <div class="row custom-card w-50 mt-5">
        <div class="col-md-8">
            <form asp-action="AddFlight">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Start" class="control-label"></label>
                    <input asp-for="Start" class="form-control" placeholder="Enter start location" />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="End" class="control-label"></label>
                    <input asp-for="End" class="form-control" placeholder="Enter end location" />
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AirPlaneID" class="control-label"></label>
                    <select asp-for="AirPlaneID" class="form-control" asp-items="ViewBag.AirPlanes">
                        <option value="">Select airplane</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="FlyRouteID" value="@ViewBag.FlyRouteID" />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success mt-2">Onayla</button>
                </div>
            </form>

        </div>
    </div>
</div>
