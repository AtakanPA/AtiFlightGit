@model AtiFlight.Models.Ticket

@{
    ViewData["Title"] = "BiletSorgula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Bilet Sorgula</h1>
<div>
    @if (ViewBag.Bulunamadi != null)
    {




        <div class="alert alert-danger d-flex w-100 align-items-center" role="alert">

            <span class="flex-grow-1 text-center">@ViewBag.Bulunamadi</span>
        </div>
    }
    <div class="d-flex align-items-center justify-content-center">
        <form asp-action="BiletSorgula" method="post">
            <input type="text" placeholder="PNR Numarası" name="PNR" />
            <input type="submit" class="btn btn-success" value="Sorgula"/>
        </form>
    </div>
</div>
<hr />
@if (Model != null)
{
    <div class=" d-flex justify-content-center align-items-center w-100">
        <div class="custom-card p-4">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Flight.FlyRoute.Start):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Flight.FlyRoute.Start.Name)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Flight.FlyRoute.End):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Flight.FlyRoute.End.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Flight.Start):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Flight.Start) - @Html.DisplayFor(model => model.Flight.End)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SeatID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Seat.SeatNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PNR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PNR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Yolcu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Yolcu.AdSoyad)
                </dd>
            </dl>
        </div>

    </div>


}