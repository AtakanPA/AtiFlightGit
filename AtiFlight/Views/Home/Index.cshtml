@model AtiFlight.Models.FlyRoute

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="row justify-content-center align-center ">
    <div class="homewrapper"></div>
    <div class="  col-md-4 d-flex justify-content-center">

        @if (ViewBag.SearchFailed != null)
        {
            <div class="alert alert-warning ">
                <span>
                    @ViewBag.SearchFailed
                </span>

            </div>

        }

        <div class="GuzergahSecim">
            <form method="get" asp-action="BuyTicket" asp-controller="User">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2">
                    <label asp-for="StartID" class="control-label"></label>
                    <select asp-for="StartID" class="form-control" asp-items="ViewBag.illerStartList"></select>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="EndID" class="control-label"></label>
                    <select asp-for="EndID" class="form-control" asp-items="ViewBag.illerEndList"></select>
                </div>
                <div class="form-group mt-2">

                    <label for="date">Tarih</label> <br />
                    <input type="date" class="form-control" id="date" name="date">

                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Bilet Ara" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>



<script>
    // Get today's date in the format YYYY-MM-DD
    const today = new Date().toISOString().split('T')[0];

    // Set the 'min' attribute of the date input to today
    document.getElementById('date').setAttribute('min', today);
</script>