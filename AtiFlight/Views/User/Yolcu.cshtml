@model AtiFlight.Models.Yolcu

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var flightID = ViewBag.FlightID;
}


<div class="container  justify-content-center align-center ">
<h4 class="text-center mt-2">Yolcu Bilgileri</h4>
<hr />
<div class="row justify-content-center ">
    <div class="col-md-4">
      <form asp-action="Yolcu" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TelNo" class="control-label"></label>
                <input asp-for="TelNo" class="form-control" />
                <span asp-validation-for="TelNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Cinsiyet</label><br>
                <label>
                    <input type="radio" asp-for="cinsiyet" value="1" />
                    Erkek
                </label>
                <label>
                    <input type="radio" asp-for="cinsiyet" value="2" />
                    Kadın
                </label>
                <span asp-validation-for="cinsiyet" class="text-danger"></span>
            </div>

            <!-- Hidden field to store FlightID -->
           
            <div class="form-group">
                <input type="hidden" name="FlightID" value="@flightID" />

                <input type="submit" value="Onayla" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

</div>