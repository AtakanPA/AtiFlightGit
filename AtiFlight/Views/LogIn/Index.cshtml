@model AtiFlight.Models.User

@{
    ViewData["Title"] = "LogIn";
}




@if (ViewBag.RegisterSucceed != null)
{
    <div class="alert alert-success">
        @ViewBag.RegisterSucceed
    </div>



}

@if (ViewBag.LoginFailed != null)
{
    <div class="alert alert-danger">
        @ViewBag.LoginFailed
    </div>
}

<div class=" container mt-4 justify-content-center align-center">
    <div class="row align-center justify-content-center">
        <h2 class="text-center">Giriş Yap</h2>
        <hr />
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control mb-2" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control mb-2" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group w-100 my-2 d-flex  align-items-center justify-content-space-between">
                    <input  type="submit" value="Giriş Yap" class="btn btn-primary " />
                    <div  class=" w-full">  <a class=" text-decoration-none">Şifremi unuttum</a></div>
                  
                </div>


            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
