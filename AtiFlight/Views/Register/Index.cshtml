@model AtiFlight.Models.User

@{
    ViewData["Title"] = "Register";
}



<div class="w-100 container mt-4 justify-content-center align-center">
    <div>

        <h2 class="text-center">Kullanıcı Kayıt Sayfası</h2>


    </div>

    <hr />
    <div class="row align-center justify-content-center">
        <div class="col-md-4">
            @if (ViewBag.TempDataMessage != null)
            {
                <div class="alert alert-danger">
                    <span>&cross;</span> @ViewBag.TempDataMessage
                </div>
            }

            <form asp-controller="Register" asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control mb-2" />
                    <span asp-validation-for="Name" class="text-danger mt-2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control mb-2" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control mb-2" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control mb-2" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Onayla" class="btn btn-primary" />
                </div>
             
            </form>
            <div class="my-2">  <a class=" text-decoration-none" href="/LogIn/Index">Zaten bir hesabınız var mı ? Hemen giriş yapın.</a></div>
          
        </div>
    </div>
</div>
  
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
